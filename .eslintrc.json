{
  "root": true,
  "env": {
    "mocha": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "indent": ["error", 2, {"SwitchCase": 1}],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "keyword-spacing": ["error", {"before": true, "after": true}],
    "eqeqeq": ["error", "always"]
  }
}
